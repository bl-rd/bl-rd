---
import '../styles/main.css';
import data from '../data/navigation.json';
const menuData = data.filter(x => x.landingPage);
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bill's website</title>
</head>
<body>
  <header>
    <div>
      <h1>Bill's Website</h1>
      <p>The personal website of me, Bill Reid</p>
    </div>
    <div style="display:flex;">
      <p data-japanese aria-hidden="true">ウェブサイトのビーレ</p>
    </div>
  </header>
  <nav>
    <ul>
      {
        menuData.map(x => (
          <li><a href={x.href}>{x.title}</a></li>
        ))
      }
    </ul>
  </nav>
</body>
</html>

<style>
  html {
    display: grid;
    place-content: center;
  }
  body {
    padding: 3rem 0;
  }
  body > * {
    width: min(95vw, 50ch);
    margin: 0 auto;
  }
  header {
    display: grid;
    gap: clamp(0.2rem, 5vw, 1rem);
    grid-template-columns: 5fr 1fr;
    grid-template-rows: repeat(2, 1fr);
    margin-top: 2rem;
    max-width: 95vw;
    padding: 2rem 0;
    border-top: 1px solid var(--colour-text);
    border-bottom: 1px solid var(--colour-text);
  }
  h1 {    
    font-size: clamp(3rem, 20vh, 8rem);
    word-break: break-all;
    margin: 0;
    padding: 0 0.9rem 0 0;
    line-height: 1.2ch;
    letter-spacing: -0.1ch;
  }
  header > div {
    grid-column: 2/3;
    grid-row: 1/3;
  }
  header > div:first-of-type {
    grid-column: 1/2;
    grid-column: 1/2;
  }
  
  header > div:first-of-type p {
    margin: 0;
  }
  header > div:first-of-type p {
    grid-column: 1/2;
    grid-row: 2/2;
    margin-top: 1.3ch;
  }
  [data-japanese] {
    background-color: var(--colour-text);
    color: var(--colour-background);
    display: inline-block;
    width: auto;
    padding: 0.4ch;
    margin-top: 0;
  }
  p {
    font-size: 2rem;
  }

  ul {
    display: flex;
    padding: 0;
    justify-content: space-evenly;
  }
  li {
    list-style: none;;
  }
</style>