---
import '../styles/main.css';
import MainNavigation from "../components/navigation/MainNavigation.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="stylesheet" href="/styles/_reset.css" />
	<title>{title}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400&family=Manrope:wght@800&family=Trispace&display=swap" rel="stylesheet"> 
</head>
<body>
  <main>
    <MainNavigation />    
	  <slot />
  </main>
</body>
</html>
